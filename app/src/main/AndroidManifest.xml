<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.FilmFit"
        tools:targetApi="31">
        <activity
            android:name=".RecomentedFilmActivity"
            android:exported="false"
            android:label="@string/title_activity_recomented_film"
            android:theme="@style/Theme.FilmFit" />
        <activity
            android:name=".CreateGroupActivity"
            android:exported="false"
            android:label="@string/title_activity_create_group"
            android:theme="@style/Theme.FilmFit" />
        <activity
            android:name=".CastomeFilmIdeaActivity"
            android:exported="false"
            android:label="@string/title_activity_castome_film_idea"
            android:theme="@style/Theme.FilmFit" />
        <activity
            android:name=".SuggestionsUserFilmActivity"
            android:exported="false"
            android:label="@string/title_activity_suggestions_user_film"
            android:theme="@style/Theme.FilmFit" />
        <activity
            android:name=".WishlistActivity"
            android:exported="false"
            android:label="@string/title_activity_wishlist"
            android:theme="@style/Theme.FilmFit" />
        <activity
            android:name=".AccountActivity"
            android:exported="false"
            android:label="@string/title_activity_account"
            android:theme="@style/Theme.FilmFit" />
        <activity
            android:name=".SearchActivity"
            android:exported="false"
            android:label="@string/title_activity_search"
            android:theme="@style/Theme.FilmFit" />
        <activity
            android:name=".MainScreenActivity"
            android:exported="false"
            android:label="@string/title_activity_main_screen"
            android:theme="@style/Theme.FilmFit" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.FilmFit">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>